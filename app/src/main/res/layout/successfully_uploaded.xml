<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/well_shaped_buttons">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/accepted_submission"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:padding="10dp"
        android:src="@drawable/accepted" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/succefully_accepted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/accepted_submission"
        android:layout_centerInParent="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:padding="10dp"
        android:text="@string/accepted_text"
        android:textSize="25sp"
        android:textStyle="bold" />
</RelativeLayout>